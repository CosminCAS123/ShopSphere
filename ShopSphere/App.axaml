<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ShopSphere.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="/Assets/FluentIcons.axaml"/>
    </Application.Styles>
	<Application.Resources>
		<!-- Define global color resources -->
		<SolidColorBrush x:Key="TomatoColor" Color="#FF6347"/>
		<SolidColorBrush x:Key="SteelBlueColor" Color="#4682B4"/>
		<SolidColorBrush x:Key="CharcoalGrayColor" Color="#2E2E2E"/>
		<SolidColorBrush x:Key="DarkTomatoColor" Color="#CD4F39"/>
		
	</Application.Resources>
</Application>
